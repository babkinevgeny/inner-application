.modal#modal-machines(style="display: none")
    .modal-dialog(role="document")
        .modal-content
            .modal-header
                h5.modal-title Редактировать ПВ
                button.close#close-modal-machines--top(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") ×
            .modal-body
                section.modal-machines
                    .row
                        .col-md-12
                            table.table.table-bordered.table-machines
                                tr
                                    th
                                    th Тип станка
                                    th Количество
                                    th Длина
                                    th Ширина
                                    th Высота
                                    th Диаметр
                                    th Глубина
                                    th Модуль
                                    th Материал
                                    th Загружен до
                                    th Коментарий
                                -const machine_types_modal = ['Строгальные станки','Зуборезные станки','Зубошлифовальные станки','Координатно-расточные станки','Токарные станки','Фрезерные станки','Токарные станки Крупногабаритные','Токарно-карусельная обработка','Фрезерные станки Крупногабаритные','Токарные автоматы','Токарные станки с ЧПУ','Токарно-фрезерные станки с ЧПУ','Фрезерные станки с ЧПУ','Токарные станки с ЧПУ Крупногабаритные','Токарно-карусельная обработка с ЧПУ','Токарно-фрезерные станки с ЧПУ Крупногабаритные','Фрезерные станки с ЧПУ Крупногабаритные','Хонингование','Внутришлифовальные станки','Круглошлифовальные станки','Плоскошлифовальные станки','Электроэрозия','Сверление и зенкерование','Слесарно-сборочные работы'];
                                -let index_modal = 1;

                                each machine_type in machine_types_modal
                                    tr
                                        td
                                            .animated-checkbox
                                                label 
                                                    input(type="checkbox" name="send_machine" value=`${index_modal}` autocomplete="off")
                                                    span.label-text
                                        td
                                            | #{machine_type}
                                            input.d-none(type="text" value=`${machine_type}` name=`machine_type_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_quantity_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_length_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_width_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_height_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_diameter_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_depth_${index_modal}`)
                                        td.small
                                            input.form-control(type="text" name=`machine_module_${index_modal}`)
                                        td.material
                                            select.form-control#machines-list(name=`machine_material_${index_modal}`)
                                                option(value="" style="display:none;")
                                                option(value="только черные металлы") только черные металлы
                                                option(value="только сталь") только сталь
                                                option(value="только нержавеющая сталь") только нержавеющая сталь
                                                option(value="только чугун") только чугун
                                                option(value="только хром") только хром
                                                option(value="никель") никель
                                                option(value="только цветные металлы") только цветные металлы
                                                option(value="вольфрам") вольфрам
                                                option(value="только алюминий") только алюминий
                                                option(value="только титан") только титан
                                                option(value="только цинк") только цинк
                                                option(value="только медь") только медь
                                                option(value="только бронза") только бронза
                                                option(value="только латунь") только латунь
                                                option(value="магний") магний
                                                option(value="только легкоплавкие металлы") только легкоплавкие металлы
                                                option(value="все") все
                                                option(value="жаропрочка") жаропрочка
                                                option(value="только пластмасса") только пластмасса
                                                option(value="текстолит") текстолит
                                                option(value="паронит") паронит
                                                option(value="фторопласт") фторопласт
                                                option(value="капролон") капролон
                                        td.date
                                            input.form-control(type="date" name=`machine_loading_${index_modal}`)
                                        td
                                            input.form-control(type="text" name=`machine_comment_${index_modal}`)


                                    -index_modal++
                            
            .modal-footer
                button.btn.btn-secondary#close-modal-machines--bottom(type="button" data-dismiss="modal") Close

